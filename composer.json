{
    "name": "soratm/php-config-converter",
    "description": "Tools for converting config files one to another (ini, yml, json)",
    "license": "MIT",
    "authors": [
        {
            "name": "Timur Malikin",
            "email": "timur.malikin@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6",
        "symfony/yaml": "v3.1.0-BETA1",
        "piwik/ini": "1.0.6"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "2.*",
        "satooshi/php-coveralls": "1.0.1",
        "codeclimate/php-test-reporter": "dev-master"
    },
    "autoload": {
        "files": [
            "src/Converter.php",
            "src/Json.php",
            "src/Yaml.php",
            "src/Ini.php",
            "src/File.php"
        ]
    },
    "bin" : ["bin/Cenvert"]
}
